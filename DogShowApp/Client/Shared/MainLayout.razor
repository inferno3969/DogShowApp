@inherits LayoutComponentBase
@page "/mainpage"
@inject AppState AppState
@using DogShowApp.Shared.Data
@using DogShowApp.Shared.Services
@implements IDisposable

@if (AppState.LoggedIn == true)
{
    <UserPage />
}
else if (AppState.LoggedIn == false)
{
    <TopBar />
}
<div class="page">

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    User user = new User();

    public bool IsLoggedIn(bool loggedIn)
    {
        loggedIn = true;
        StateHasChanged();
        return loggedIn;
    }

    protected override void OnInitialized()
    {
        AppState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        AppState.OnChange -= StateHasChanged;
    }
}
