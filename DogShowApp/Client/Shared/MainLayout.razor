@inherits LayoutComponentBase
@page "/mainpage"
@using DogShowApp.Shared.Data
@using DogShowApp.Client.Pages

@if (Login.user.isLoggedIn == true)
{
    <UserPage />
}
else if (Login.user.isLoggedIn == false)
{
    <TopBar />
}
<div class="page">

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        StateHasChanged();
    }
}
